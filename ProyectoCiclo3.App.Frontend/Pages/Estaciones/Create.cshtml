@page
@model ProyectoCiclo3.App.Frontend.Pages.FormEstacionesModel
@{
}


<div class="card">
    <div class="card-header">
        Crear
    </div>
    <div class="card-body">


        <form method="POST">
            <div class="container">


                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label for="nombre" class="form-label">Nombre:</label>

                        </div>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" required placeholder="Nombre" minlength="3"
                                asp-for="Estacion.nombre">
                        </div>
                        <span class="text-danger" asp-validation-for="Estacion.nombre"></span> <br>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label for="direccion" class="form-label">Direccion:</label>
                        </div>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" required placeholder="Direccion"
                                asp-for="Estacion.direccion">
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label for="coord_x" class="form-label">Coordenada X:</label>

                        </div>
                        <div class="col-sm-6">
                            <input type="number" class="form-control" required placeholder="Coordenada X"
                                asp-for="Estacion.coord_x" step="any">

                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label for="coord_y" class="form-label">Coordenada Y:</label>
                        </div>
                        <div class="col-sm-6">
                            <input type="number" class="form-control" required placeholder="Coordenada Y"
                                asp-for="Estacion.coord_y" step="any">
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label for="tipo">Tipo:</label>

                        </div>
                        <div class="col-sm-6">
                            <select class="form-control" asp-for="Estacion.tipo">
                                <option value="">Seleccione el Tipo</option>
                                <option value="Principal">Principal</option>
                                <option value="Segundaria">Segundaria</option>
                            </select>

                        </div>

                    </div>
                </div>


            </div>
            <hr>
            <button type="submit" class="btn btn-success">Enviar</button>
        </form>

    </div>
</div>






